{
  "name": "aplus",
  "scripts": {
    "postdeploy": "pg_dump -x -O --if-exists --clean $STAGING_DATABASE_URL | psql $DATABASE_URL"
  },
  "env": {
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "APP_DOMAIN": {
      "required": true
    },
    "APP_HOST": {
      "required": true
    },
    "APP_HTTPS": {
      "required": true
    },
    "APPLICATION_SECRET": {
      "required": true
    },
    "EVOLUTIONS_AUTOAPPLY": {
      "required": true
    },
    "MAIL_HOST": {
      "required": true
    },
    "MAIL_PASSWORD": {
      "required": true
    },
    "MAIL_PORT": {
      "required": true
    },
    "MAIL_USER": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/scala"
    }
  ]
}
